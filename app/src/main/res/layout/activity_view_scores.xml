<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"> <!-- Add this line for root view ID -->

    <Button
        android:id="@+id/button_sort_high_to_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort High to Low"/>

    <Button
        android:id="@+id/button_sort_low_to_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort Low to High" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/scoresRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
